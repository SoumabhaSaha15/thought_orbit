{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
  },
  "include": [
    "./src/**/*"
  ]
}