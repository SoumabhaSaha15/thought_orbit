<div class="navbar bg-base-200">
  <div class="flex-none">
    <label class="btn btn-square btn-ghost" for="my-drawer">
      <ion-icon src="/assets/menu.svg" class="text-base-content" size="large"></ion-icon>
    </label>
  </div>
  <div class="flex-1">
    <a class="btn btn-ghost text-xl">Thought Orbit.IO</a>
  </div>
  <div class="flex-none">
    <div class="dropdown dropdown-end">
      <button class="btn btn-square btn-ghost">
        <div class="avatar">
          <div class="w-8 rounded-full">
            <img src="<%= avatar %>" class="rounded-full bg-base-300"/>
          </div>
        </div>
      </button>
      <div tabindex="0" class="dropdown-content menu z-[1] w-96 rounded-box bg-base-300 p-2 shadow">
        <div class="card rounded-[12px] w-full max-w-sm shadow-2xl bg-base-100">
          <figure class="px-10 pt-10">
            <img src="<%= avatar %>" alt="Profile Picture" class="h-24 w-24 rounded-full bg-base-200" />
          </figure>
          <div class="card-body items-center text-center overflow-hidden text-ellipsis">
            <h2 class="card-title">
              <%= name %>
            </h2>
            <p>
              <%= email %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>