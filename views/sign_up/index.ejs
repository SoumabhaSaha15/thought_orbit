<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="/styles/tailwind.css" rel="stylesheet">
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap"
    rel="stylesheet" />
  <link rel="stylesheet" href="styles/aos.css">
  <link rel="icon" type="image/webp" href="assets/logo.webp" />
  <title>Thought Orbit.IO</title>
</head>

<body class="bg-base-300 text-blue-100 min-h-screen mt-0 flex items-center justify-center">
  <form class="flex flex-col bg-base-100 shadow-lg p-12 align-middle items-center min-w-[50%] max-w-[80%] rounded-xl"
    method="POST" action="/signup" data-aos="zoom-in" data-aos-duration="500" enctype="multipart/form-data">
    <div class="lg:flex lg:gap-4 xl:flex xl:gap-4">
      <div>
        <label for="uploadFile"
          class="bg-base-300 bg-center bg-no-repeat bg-contain text-gray-500 font-semibold text-base max-w-md h-52 flex flex-col items-center justify-center cursor-pointer border-2 border-base-300 border-dashed rounded-lg mx-auto font-[sans-serif] aspect-square">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-11 mb-2 fill-gray-500" viewBox="0 0 32 32">
            <path
              d="M23.75 11.044a7.99 7.99 0 0 0-15.5-.009A8 8 0 0 0 9 27h3a1 1 0 0 0 0-2H9a6 6 0 0 1-.035-12 1.038 1.038 0 0 0 1.1-.854 5.991 5.991 0 0 1 11.862 0A1.08 1.08 0 0 0 23 13a6 6 0 0 1 0 12h-3a1 1 0 0 0 0 2h3a8 8 0 0 0 .75-15.956z"
              data-original="#000000" />
            <path
              d="M20.293 19.707a1 1 0 0 0 1.414-1.414l-5-5a1 1 0 0 0-1.414 0l-5 5a1 1 0 0 0 1.414 1.414L15 16.414V29a1 1 0 0 0 2 0V16.414z"
              data-original="#000000" />
          </svg>
          Upload Image
          <input type="file" name="avatar" required id='uploadFile' class="hidden" accept=".png, .jpg, .jpeg" />
          <p class="text-xs font-medium text-gray-400 mt-2">JPG,PNG,JPEG</p>
        </label>
      </div>
      <div class="lg:flex flex-col justify-center">
        <input class="flex items-center h-12 px-4 w-64 bg-base-300 mt-2 rounded focus:outline-none focus:ring-2"
          type="text" name="name" pattern="^[a-zA-Z0-9]+(?: [a-zA-Z0-9]+)*$" minlength="4" maxlength="30" required placeholder="name" />
        <input id="emailField"
          class=" bg-base-300 flex items-center h-12 px-4 w-64 mt-2 rounded focus:outline-none focus:ring-2"
          name="email" type="email" required placeholder="email" />
        <input class=" bg-base-300 flex items-center h-12 px-4 w-64  mt-2 rounded focus:outline-none focus:ring-2"
          id="password" name="password" type="password" maxlength="8" minlength="8" placeholder="password (double click to show)" required pattern="^[\x21-\x7E]+$" />
      </div>
    </div>
    <div>
      <button type="submit"
        class="flex items-center justify-center h-12 px-6 w-64 bg-blue-600 mt-8 rounded font-semibold text-sm text-blue-100 hover:bg-blue-700 hover:animate-pulse">Sign
        up</button>
      <div class="flex mt-6 justify-center text-xs">
        <a class="text-blue-400 hover:text-blue-500" href="#">Login</a>
      </div>
    </div>

  </form>

</body>
<script src="scripts/aos.js"></script>
<script>
  AOS.init({
    offset: 120,
    delay: 0,
    duration: 400,
    easing: 'ease',
    once: true,
    mirror: false,
    anchorPlacement: 'top-bottom'
  });
  document.getElementById('password').ondblclick = (event) => {
    event.target.type = (event.target.type == "text") ? "password" : "text";
  }
  document.getElementById('uploadFile').oninput = (event) => {
    try {
      if (event.target.files && (event.target.files)[0].size <= (5 * 1024 * 1024)) {
        event.target.parentElement.style.backgroundImage = `url('${URL.createObjectURL(event.target.files[0])}')`;
      } else window.alert('file is larger than 5 MB');
    } catch (error) {
      window.alert('file is larger than 5 MB');
    }
  }
</script>

</html>